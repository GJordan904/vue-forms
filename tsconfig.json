{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "./config/types", "src/typings.d.ts"],
    "lib": ["dom", "esnext"]
  },
  "include": [
    "./src/**/*"
  ]
}